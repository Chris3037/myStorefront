<!DOCTYPE html>
<html>
<head>
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <a href="@Url.Action("index", "product")">Dashboard</a>
    <br />
    @if (Request.IsAuthenticated)
    {
        <span>Welcome @User.Identity.Name
            <a href="@Url.Action("logout", "account", new { returnURL = Request.Url.LocalPath })">Logout</a>
        </span>
    }
    else
    {
        <span>
            @*<a href="@Url.Action("login", "account")">Login</a>*@
            @Html.Partial("login", new myStorefront.Models.Login())
        </span>
    }
    <header>
        <h1>Storefront</h1>
        <nav class="cssmenu">
            <li class='active'><a href='@Url.Action("index", "home")'><span>Home</span></a></li>
            @Html.Action("navigation", "home")
        </nav>
    </header>
    <div class="content">@RenderBody()</div>

    @Scripts.Render("~/bundles/jquery")
    @RenderSection("scripts", required: false)
</body>
</html>
